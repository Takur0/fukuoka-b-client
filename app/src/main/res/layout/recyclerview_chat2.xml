<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/other_user_name"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/other_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/opponent_message_balloon"
        android:elevation="5dp"
        android:padding="15dp"
        android:maxWidth="240dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_user_name"/>

    <TextView
        android:id="@+id/other_message_time"
        android:text="12:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/other_message"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/other_message" />

</android.support.constraint.ConstraintLayout>